<!DOCTYPE html>
<html>
    <head>
        <title>
            register
        </title>
    </head>
    <body>
        {% macro input(name, value, type, size) %}
            <div class="form-group">
                <input type="{{ type|default('text') }}" name="{{ name }}" value="{{ value|e }}" size="{{ size|default(20) }}" required />
            </div>
        {% endmacro %}

        {% import _self as forms %}
        <p>{{msg}}</p>
        <form action="register.php" method="post">
            <label>firstname</label>{{forms.input("firstname",null,"text")}}
            <label>lastname</label>{{forms.input("lastname",null,"text")}}
            <label>password</label>{{forms.input("password",null,"password")}}
            <label>email</label>{{forms.input("email",null,"email")}}
            {{forms.input("frm_submit","Register","submit")}}
        </form>
    </body>
</html>

