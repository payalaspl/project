<!DOCTYPE html>
<html>
    <head>
        <title>
            login
        </title>
    </head>
    <body>
        {% macro input(name, value, type, size) %}
            <div class="form-group">
                <input type="{{ type|default('text') }}" name="{{ name }}" value="{{ value|e }}" size="{{ size|default(20) }}" required />
            </div>
        {% endmacro %}
        {% macro textarea(name, value, rows = 10, cols = 40) %}
                <textarea name="{{ name }}" rows="{{ rows }}" cols="{{ cols }}">{{ value|e }}</textarea>
            {% endmacro %}
        {% import _self as forms %}
        <p>{{msg}}</p>
        <form action="add_categories.php" method="post">
            <label>Name</label>{{forms.input("name",null,"text")}}
            <label>Description</label>{{ forms.textarea('description') }}
            {{forms.input("frm_submit","Submit","submit")}}
        </form>
    </body>
</html>



